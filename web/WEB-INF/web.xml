<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/controller/LoginServlet</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>DecodeFilter</filter-name>
        <filter-class>filter.DecodeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DecodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>controller.RegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/controller/RegistServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherRegistServlet</servlet-name>
        <servlet-class>controller.TeacherRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherRegistServlet</servlet-name>
        <url-pattern>/controller/TeacherRegistServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherLoginServlet</servlet-name>
        <servlet-class>controller.TeacherLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherLoginServlet</servlet-name>
        <url-pattern>/controller/TeacherLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddQuestionServlet</servlet-name>
        <servlet-class>controller.AddQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQuestionServlet</servlet-name>
        <url-pattern>/controller/AddQuestionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteQuestionServlet</servlet-name>
        <servlet-class>controller.DeleteQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteQuestionServlet</servlet-name>
        <url-pattern>/controller/DeleteQuestionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateQuestionServlet</servlet-name>
        <servlet-class>controller.UpdateQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateQuestionServlet</servlet-name>
        <url-pattern>/controller/UpdateQuestionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SelectQuestionServlet</servlet-name>
        <servlet-class>controller.SelectQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectQuestionServlet</servlet-name>
        <url-pattern>/controller/SelectQuestionServlet</url-pattern>
    </servlet-mapping>



</web-app>